{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": [
      "vite/client",
      "reflect-metadata"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "preserveSymlinks": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "~@api": ["./src/api"],
      "~@api/*": ["./src/api/*"],
      "~@common": ["./src/common"],
      "~@common/*": ["./src/common/*"],
      "~@components": ["./src/components"],
      "~@components/*": ["./src/components/*"],
      "~@models": ["./src/models"],
      "~@models/*": ["./src/models/*"],
      "~@service": ["./src/service"],
      "~@service/*": ["./src/service/*"],
      "~@store": ["./src/store"],
      "~@store/*": ["./src/store/*"],
      "~@theme": ["./src/theme"],
      "~@theme/*": ["./src/theme/*"],
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "moduleResolution": "Node16",
      "useDefineForClassFields": true
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
